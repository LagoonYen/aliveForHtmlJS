                    $("#city").append(option)
                    $("#area").empty();
                    $("#area").append(option)
                    $("#town").empty()
                    $("#town").append(option)

                    response.forEach(x =>{
                        $("#city").append(`<option value="${x["id"]}" >${x["name"]}</option>`)
